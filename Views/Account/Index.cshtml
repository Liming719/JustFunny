@{
    ViewData["Title"] = "Profile";
}
<div class="py-5 min-h-[600px]">
    <div class="flex flex-col justify-center">
        <div class="md:px-5 px-3 md:py-5 py-3">
            <h1 class="text-3xl font-semibold mb-3">Register</h1>      
        </div>
        
        <div class="lg:px-5 px-3 lg:py-5 py-3 w-full max-w-[400px]">
            <form method="post" enctype="multipart/form-data">
                <div class="flex flex-col child:mb-3 items-start justify-center text-lg">
                    @{
                        var FormValueList =  new List<string[]>{
                            new string[] {"Username", "pick a username", "username" },                       
                            new string[] {"Password", "create a password", "password" },                            
                            new string[] {"Password", "enter password again", "password_check"},
                            new string[] {"Email", "you@example.com", "email"},
                        };
                        @foreach (var item in FormValueList){
                        <div class="w-full flex flex-col pb-1">
                            <label for="@item[2]" class=""><small>@item[0]</small></label>
                            <input name="@item[2]" id="@item[2]" class="border rounded-sm py-1" type="text" placeholder="@item[1]" autocomplete="off">
                        </div>
                        }
                    }
                    <div class="w-full flex flex-col pb-1">
                         <label for="role" class=""><small>Role</small></label>
                         <input name="role" id="role" class="border rounded-sm py-1" type="text" placeholder="role" autocomplete="off">
                    </div>
                    <button type="submit" formaction="Save" class="w-full px-2 py-4 mt-5 text-white bg-orange-500 hover:bg-orange-600 rounded-md">Save</button>
                </div>
            </form>
        </div>
     </div>
</div>