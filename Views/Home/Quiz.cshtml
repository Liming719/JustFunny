@{
    ViewData["Title"] = "Quiz";
}
@section Scripts{
    <script src="~/js/quiz.js"></script>
}
<div class="py-5 min-h-[600px]">

    @if (Model != null && Model is IEnumerable<Question> && Model.Count > 0)
    {
        <div>
        @{            
            int index = 1;        
            @foreach(var question in Model)
            {
                <div class="mb-4 max-w-[300px]">
                    <div class="text-xl font-semibold mb-2">@index. @question.Content</div>
                    <ul class="child:py-2 child-hover:bg-green-200 child-hover:cursor-pointer child:rounded-md options">
                        <li>(A) @question.OptionA</li>
                        <li>(B) @question.OptionB</li>
                        <li>(C) @question.OptionC</li>
                        <li>(D) @question.OptionD</li>
                    </ul>
                </div>   
                index = index + 1;    
            }
        }
        </div>
    }
    else
    {
        <h1>The Quiz is Not Ready!</h1>
    }
</div>