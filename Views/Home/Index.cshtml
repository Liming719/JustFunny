@{
    ViewData["Title"] = "Home Page";
}

<div class="py-5 min-h-[600px]">
    <div class="flex md:flex-row flex-col justify-center">

        <div class="md:px-5 px-3 md:py-5 py-3 md:w-1/2 w-full">
            <h1 class="text-6xl font-semibold mb-3">Just <small>for</small> Fun</h1>      
            <p class="text-gray-700">Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatibus similique sapiente consectetur aperiam atque, cupiditate expedita numquam autem, repudiandae ullam corporis maxime quaerat! Dignissimos vitae, rerum commodi tenetur voluptas iste.</p>
        </div>

        <div class="lg:px-5 px-3 lg:py-5 py-3 md:w-1/3 w-full">
            <form asp-controller="Home" asp-action="Register" method="post" enctype="multipart/form-data">
                <div class="flex flex-col child:mb-3 items-start justify-center text-lg">
                    @{
                        var FormValueList =  new List<string[]>{
                            new string[] {"Username", "Pick a username", "username-register", "username" },                            
                            new string[] {"Password", "Create a password", "password-register", "password"}
                        };
                        @foreach (var item in FormValueList){
                        <div class="w-full flex flex-col pb-1">
                            <label for="@item[2]" class=""><small>@item[0]</small></label>
                            <input name="@item[3]" id="@item[2]" class="border rounded-sm py-1" type="text" placeholder="@item[1]" autocomplete="off">
                        </div>
                        }
                    }
                    <button type="submit" class="w-full px-2 py-4 mt-5 text-white bg-orange-500 hover:bg-orange-600 rounded-md">Register</button>
                    <button type="submit" class="w-full px-2 py-4 mt-2 text-white bg-green-500 hover:bg-green-600 rounded-md">Login</button>
                </div>
            </form>
      </div>
    </div>
  </div>
